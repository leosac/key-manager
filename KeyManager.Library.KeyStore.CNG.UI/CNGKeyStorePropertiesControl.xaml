<UserControl x:Class="Leosac.KeyManager.Library.KeyStore.CNG.UI.CNGKeyStorePropertiesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:domain="clr-namespace:Leosac.KeyManager.Library.KeyStore.CNG.UI.Domain"
             xmlns:local="clr-namespace:Leosac.KeyManager.Library.KeyStore.CNG.UI"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:properties="clr-namespace:Leosac.KeyManager.Library.KeyStore.CNG.UI.Properties"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance domain:CNGKeyStorePropertiesControlViewModel}"
             d:DesignHeight="50" d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ComboBox Grid.Row="0" Margin="5,5,5,5"
                  ItemsSource="{Binding StorageProviders}" SelectedItem="{Binding CNGProperties.StorageProvider}"
                  materialDesign:HintAssist.HelperText="{x:Static properties:Resources.StorageProvider}"
                  materialDesign:HintAssist.Hint="{x:Static properties:Resources.StorageProvider}" />
    </Grid>
</UserControl>
