<UserControl x:Class="Leosac.KeyManager.KeyStore.FileKeyStore"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Leosac.KeyManager.KeyStore"
             mc:Ignorable="d" d:DesignWidth="500" Height="50">
    <Grid>
        <Label Content="Key Store base directory:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxDirectory" HorizontalAlignment="Left" Margin="153,9,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="233" IsEnabled="False"/>
        <Button x:Name="btnBrowse" Content="Browse..." HorizontalAlignment="Left" Margin="391,5,0,0" VerticalAlignment="Top" Click="BtnBrowse_Click"/>

    </Grid>
</UserControl>
