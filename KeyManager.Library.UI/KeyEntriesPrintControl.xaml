<UserControl x:Class="Leosac.KeyManager.Library.UI.KeyEntriesPrintControl"
             x:Name="userControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:domain="clr-namespace:Leosac.KeyManager.Library.UI.Domain"
             xmlns:local="clr-namespace:Leosac.KeyManager.Library.UI"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:properties="clr-namespace:Leosac.KeyManager.Library.UI.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <StackPanel>
        <materialDesign:ColorZone Padding="16"
                                    materialDesign:ElevationAssist.Elevation="Dp4"
                                    Mode="PrimaryMid">
            <DockPanel MinHeight="100">

                <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="28"
                        FontWeight="Bold"
                        Text="{x:Static properties:Resources.KeyEntriesExportPrint}" />
            </DockPanel>
        </materialDesign:ColorZone>

        <ListView ItemsSource="{Binding KeyEntries, ElementName=userControl}" HorizontalAlignment="Stretch" MinHeight="375">
            <ListView.Background>
                <ImageBrush ImageSource="pack://application:,,,/KeyManager.Library.UI;component/images/confidential.png" Stretch="UniformToFill" Opacity="0.2" />
            </ListView.Background>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="{x:Static properties:Resources.KeyEntryIdentifier}" DisplayMemberBinding="{Binding Identifier.Id}" Width="Auto"/>
                    <GridViewColumn Header="{x:Static properties:Resources.KeyEntryLabel}" DisplayMemberBinding="{Binding Identifier.Label}" Width="300"/>
                    <GridViewColumn Header="{x:Static properties:Resources.KeyEntryVariant}" DisplayMemberBinding="{Binding Variant.Name}" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>

        <materialDesign:ColorZone Padding="16"
                                    materialDesign:ElevationAssist.Elevation="Dp4"
                                    Mode="PrimaryMid">
            <DockPanel LastChildFill="True">
                <DockPanel DockPanel.Dock="Bottom" Margin="0,15,0,0">
                    <TextBlock Text="www.leosac.com" DockPanel.Dock="Right" HorizontalAlignment="Right" />
                    <WrapPanel>
                        <TextBlock Text="{x:Static properties:Resources.DocumentGenerated}" />
                        <TextBlock Text="Leosac Key Manager" FontWeight="Bold" Margin="3,0,0,0" />
                    </WrapPanel>
                </DockPanel>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="{x:Static properties:Resources.KeyExportDisclaimer1}" TextWrapping="Wrap" HorizontalAlignment="Center" />
                    <TextBlock Text="{x:Static properties:Resources.KeyExportDisclaimer2}" TextWrapping="Wrap" HorizontalAlignment="Center" />
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>
    </StackPanel>
</UserControl>
