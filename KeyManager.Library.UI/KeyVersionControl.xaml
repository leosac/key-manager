<UserControl x:Class="Leosac.KeyManager.Library.UI.KeyVersionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Leosac.KeyManager.Library.UI"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="500"
             x:Name="keyVersionControl">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <local:NumericUpDownControl Hint="Version" HelperText="Key version" Grid.Row="0" HorizontalAlignment="Left" Width="250" MaxValue="255" CurrentValue="{Binding KeyVersion.Version, Mode=TwoWay, ElementName=keyVersionControl}" VerticalAlignment="Center"/>

        <local:KeyControl Grid.Row="1"  HorizontalAlignment="Left" VerticalAlignment="Center" Key="{Binding KeyVersion.Key, ElementName=keyVersionControl, Mode=TwoWay}" />
    </Grid>
</UserControl>
